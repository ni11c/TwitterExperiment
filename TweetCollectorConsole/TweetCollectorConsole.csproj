<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <RootNamespace>Nde.TwitterExperiment.TweetCollectorConsole</RootNamespace>
    <StartupObject>TweetCollectorConsole.Program</StartupObject>
    <LangVersion>latest</LangVersion>
    <AssemblyName>collect-tweets</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="run.cmd" />
    <None Remove="TweetCollectorConsole.csproj.DotSettings" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="run.cmd">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.WebJobs.Publish" Version="2.0.0" />
    <PackageReference Include="TweetinviAPI" Version="4.0.0" />
    <PackageReference Include="WindowsAzure.Storage" Version="9.3.2" />
  </ItemGroup>

</Project>
